<?xml version='1.0' encoding='utf-8'?>
<widget id="br.pablogil.barcode" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Barcode</name>
    <description>
        Leitor de código de barras com listagem de códigos
    </description>
    <author email="pablo@pablogil.com.br" href="http://pablogil.com.br">
        Pablo Gil @oficinapps
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^6.0.8" />
    <engine name="android" spec="^6.2.3" />
</widget>
